{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "clean",
            "command": "dotnet clean",
            "type": "shell",
            "problemMatcher": "$msCompile",
            "options": {
                "cwd": "${workspaceFolder}/Demo.Azure.Functions.GraphQL"
            }
        },
        {
            "label": "build",
            "command": "dotnet build",
            "type": "shell",
            "dependsOn": "clean",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$msCompile",
            "options": {
                "cwd": "${workspaceFolder}/Demo.Azure.Functions.GraphQL"
            }
        },
        {
            "label": "clean release",
            "command": "dotnet clean --configuration Release",
            "type": "shell",
            "problemMatcher": "$msCompile",
            "options": {
                "cwd": "${workspaceFolder}/Demo.Azure.Functions.GraphQL"
            }
        },
        {
            "label": "publish",
            "command": "dotnet publish --configuration Release",
            "type": "shell",
            "dependsOn": "clean release",
            "problemMatcher": "$msCompile",
            "options": {
                "cwd": "${workspaceFolder}/Demo.Azure.Functions.GraphQL"
            }
        },
        {
            "type": "func",
            "dependsOn": "build",
            "options": {
                "cwd": "${workspaceFolder}/Demo.Azure.Functions.GraphQL/bin/Debug/netcoreapp2.1"
            },
            "command": "host start",
            "isBackground": true,
            "problemMatcher": "$func-watch"
        }
    ]
}